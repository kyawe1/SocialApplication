@model ProfileCreateViewModel

<div class='m-1 p-3 m-auto d-block'>

    <form class="m-2 p-2" method="post" asp-action="Update" asp-controller="Profile" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="lh-lg">
            @Html.LabelFor(p => p.DisplayName, new { htmlAttributes = new { @class = "form-label" } })
            @Html.EditorFor(p => p.DisplayName, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
        </div>
        <div class="lh-lg">
            @Html.LabelFor(p => p.address, new { htmlAttributes = new { @class = "form-label" } })
            @Html.EditorFor(p => p.address, new { htmlAttributes = new { @class = "form-control", placeholder = "Address" } })
        </div>
        <div class="lh-lg">
            @Html.LabelFor(p => p.Date_Of_Birth, new { htmlAttributes = new { @class = "form-label" } })
            @Html.EditorFor(p => p.Date_Of_Birth, new { htmlAttributes = new { @class = "form-control", placeholder = "Date Of Birth" } })
        </div>
        <div class="lh-lg">
            @Html.LabelFor(p => p.Image, new { htmlAttributes = new { @class = "form-label" } })
            @Html.EditorFor(p => p.Image, new { htmlAttributes = new { @class = "form-control"} })
        </div>
        <div class="mt-2">
            <input type='submit' class='d-block btn btn-primary w-100 rounded m-auto' value="Update Profile" />
        </div>
    </form>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}