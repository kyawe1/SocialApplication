@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Identity", FormMethod.Post,new { @class="col-12 col-md-4 m-auto" }))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="mb-2">
        @Html.LabelFor(p => p.Email, new { @class = "form-label" })
        @Html.EditorFor(p => p.Email, new { htmlAttributes= new { @class = "form-control", placeholder = "Email" } })
    </div>
    <div class="mb-2">
        @Html.LabelFor(p => p.password, new { @class = "form-label" })
        @Html.EditorFor(p => p.password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
    </div>
    <div class="m-1">
        <input type="submit" value="Login" class="btn btn-primary" />
    </div>

}

