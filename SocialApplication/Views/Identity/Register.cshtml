@model RegisterViewModel 
@{
    ViewBag.Title = "Register";
}


@using (Html.BeginForm("Register","Identity",FormMethod.Post))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="mb-2">
        @Html.LabelFor(p => p.Email, new { @class = "form-label" })
        @Html.EditorFor(p => p.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
    </div>
    <div class="mb-2">
        @Html.LabelFor(p => p.password, new { @class = "form-label" })
        @Html.EditorFor(p => p.password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
    </div>
    <div class="mb-2">
        @Html.LabelFor(p => p.ConfirmPassword, new { @class = "form-label" })
        @Html.EditorFor(p => p.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
    </div>
    <div class="m-1">
        <input type="submit" value="Register" class="btn btn-primary" />
    </div>

}
